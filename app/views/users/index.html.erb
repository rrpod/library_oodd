<% if current_user && current_user.admin? %>
    <div class="container">
      <h2>All Users</h2>
      <div class="table-responsive">
        <table class="table">
          <thead>
           <tr>
             <th>First Name</th>
             <th>Last Name</th>
             <th>Email</th>
             <th>Action</th>
           </tr>
          </thead>
          <tbody>
          <% @user.each do |user| %>
              <tr>
                <td style="word-wrap: break-word"><%= user.first_name %></td>
                <td style="word-wrap: break-word"><%= user.last_name %></td>
                <td style="word-wrap: break-word"><%= user.email %></td>
                <td><%= link_to 'Details ', user, action: 'show' , :id => user.id  %>
                  <%= link_to ' Delete', user , method: 'delete' , data: { confirm: "You sure?" } %></td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
 <%end %>

